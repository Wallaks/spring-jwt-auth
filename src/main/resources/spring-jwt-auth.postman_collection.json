{
	"openapi":"3.1.0",
	"info":{
		"title":"OpenAPI definition",
		"version":"v0"
	},
	"servers":[
		{
			"url":"http://localhost:8080",
			"description":"Generated server url"
		}
	],
	"paths":{
		"/auth/login":{
			"post":{
				"tags":[
					"auth-controller"
				],
				"summary":"Login do usuário e geração de token JWT",
				"operationId":"login",
				"requestBody":{
					"content":{
						"application/json":{
							"schema":{
								"$ref":"#/components/schemas/AuthRequest"
							}
						}
					},
					"required":true
				},
				"responses":{
					"200":{
						"description":"Login realizado com sucesso",
						"content":{
							"*/*":{
								"schema":{
									"type":"object"
								}
							}
						}
					},
					"401":{
						"description":"Credenciais inválidas",
						"content":{
							"*/*":{
								"schema":{
									"type":"object"
								}
							}
						}
					}
				}
			}
		},
		"/api/pessoas/cadastrar":{
			"post":{
				"tags":[
					"pessoa-controller"
				],
				"summary":"Cadastra uma nova pessoa no sistema",
				"operationId":"cadastrarPessoa",
				"requestBody":{
					"content":{
						"application/json":{
							"schema":{
								"$ref":"#/components/schemas/PessoaDTO"
							}
						}
					},
					"required":true
				},
				"responses":{
					"201":{
						"description":"Pessoa cadastrada com sucesso",
						"content":{
							"*/*":{
								"schema":{
									"$ref":"#/components/schemas/Pessoa"
								}
							}
						}
					},
					"400":{
						"description":"Dados inválidos",
						"content":{
							"*/*":{
								"schema":{
									"$ref":"#/components/schemas/Pessoa"
								}
							}
						}
					}
				}
			}
		}
	},
	"components":{
		"schemas":{
			"AuthRequest":{
				"type":"object",
				"properties":{
					"nome":{
						"type":"string",
						"maxLength":20,
						"minLength":3
					},
					"senha":{
						"type":"string",
						"maxLength":2147483647,
						"minLength":6
					}
				},
				"required":[
					"nome",
					"senha"
				]
			},
			"PessoaDTO":{
				"type":"object",
				"properties":{
					"nome":{
						"type":"string",
						"maxLength":20,
						"minLength":3
					},
					"senha":{
						"type":"string",
						"maxLength":2147483647,
						"minLength":6
					}
				},
				"required":[
					"nome",
					"senha"
				]
			},
			"Pessoa":{
				"type":"object",
				"properties":{
					"id":{
						"type":"integer",
						"format":"int64"
					},
					"nome":{
						"type":"string"
					}
				}
			}
		}
	}
}